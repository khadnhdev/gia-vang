<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gold Price Hub | Theo dõi giá vàng và tỷ giá</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <!-- Hero Section -->
    <div class="hero-section py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold mb-3 text-shadow">
                        Theo dõi giá vàng<br>và tỷ giá thời gian thực
                    </h1>
                    <p class="lead mb-4 text-light">
                        Cập nhật liên tục giá vàng DOJI và tỷ giá Vietcombank
                    </p>
                    <div class="last-update text-light opacity-75">
                        <i class="fas fa-clock me-2"></i>
                        <% 
                            const now = new Date();
                            const formatter = new Intl.DateTimeFormat('vi-VN', {
                                hour: '2-digit',
                                minute: '2-digit',
                                day: '2-digit',
                                month: '2-digit',
                                year: 'numeric'
                            });
                        %>
                        Cập nhật lúc: <%= formatter.format(now) %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="quick-stats row g-3">
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-title">SJC</div>
                                <div class="stat-value">
                                    <%= goldData.GoldList.DGPlist.Row[0].Buy %>
                                </div>
                                <div class="stat-label">Giá mua</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-title">USD</div>
                                <div class="stat-value">
                                    <%= goldData.GoldList.IGPList.Row.Buy %>
                                </div>
                                <div class="stat-label">Tỷ giá mua</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <!-- Bảng giá vàng -->
            <div class="col-lg-8">
                <div class="card price-table-card">
                    <div class="card-header gold-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="header-icon">
                                    <i class="fas fa-coins"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">Bảng Giá Vàng DOJI</h5>
                                    <small class="text-gold">Cập nhật theo thời gian thực</small>
                                </div>
                            </div>
                            <div class="refresh-button" onclick="location.reload()">
                                <i class="fas fa-sync-alt"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover price-table mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">Loại vàng</th>
                                    <th class="text-center">Giá mua</th>
                                    <th class="text-center">Giá bán</th>
                                    <th class="text-center pe-4">Chênh lệch</th>
                                </tr>
                            </thead>
                            <tbody id="goldPriceTable">
                                <% if (goldData && goldData.GoldList && goldData.GoldList.DGPlist) { %>
                                    <% goldData.GoldList.DGPlist.Row.forEach(item => { %>
                                    <tr class="price-row">
                                        <td class="ps-4 gold-type">
                                            <div class="d-flex align-items-center">
                                                <div class="gold-icon me-2">
                                                    <i class="fas fa-circle"></i>
                                                </div>
                                                <%= item.Name %>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="price-value buy-price">
                                                <%= item.Buy %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="price-value sell-price">
                                                <%= item.Sell %>
                                            </span>
                                        </td>
                                        <td class="text-center pe-4">
                                            <% const diff = parseFloat(item.Sell.replace(/,/g, '')) - parseFloat(item.Buy.replace(/,/g, '')); %>
                                            <span class="diff-badge">
                                                <%= diff.toLocaleString() %>
                                            </span>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-4">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Đang tải...</span>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Thông tin phụ -->
            <div class="col-lg-4">
                <!-- Tỷ giá USD/VND -->
                <div class="card rate-card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-dollar-sign me-2"></i>Tỷ giá USD/VND
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (goldData && goldData.GoldList && goldData.GoldList.IGPList) { %>
                            <div class="row text-center">
                                <div class="col-6">
                                    <h6 class="text-muted">Mua vào</h6>
                                    <h4 class="text-success rate-value">
                                        <span class="exchange-rate-buy"><%= goldData.GoldList.IGPList.Row.Buy %></span>
                                        <small>VND</small>
                                    </h4>
                                </div>
                                <div class="col-6">
                                    <h6 class="text-muted">Bán ra</h6>
                                    <h4 class="text-danger rate-value">
                                        <span class="exchange-rate-sell"><%= goldData.GoldList.IGPList.Row.Sell %></span>
                                        <small>VND</small>
                                    </h4>
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <div class="badge bg-light text-dark source-badge">
                                    <%= goldData.GoldList.IGPList.Row.Name %>
                                </div>
                                <div class="update-time">
                                    <small class="text-muted">
                                        <i class="fas fa-history me-1"></i>
                                        <%= goldData.GoldList.IGPList.DateTime %>
                                    </small>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Công cụ đổi tiền tệ -->
                <div class="card converter-card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-exchange-alt me-2"></i>Đổi tiền tệ
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Từ:</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="amount" placeholder="Nhập số tiền">
                                <select class="form-select" id="fromCurrency">
                                    <option value="USD">USD</option>
                                    <option value="VND">VND</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sang:</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="result" readonly>
                                <select class="form-select" id="toCurrency">
                                    <option value="VND">VND</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-warning convert-btn" id="convertBtn">
                                <i class="fas fa-sync-alt me-2"></i>Đổi tiền
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html> 